<% layout("Layouts/boilerplate") %>

<div class="page-content container my-5">

    <!-- Listing Details -->
    <h3 class="mb-4"><%= listing.title %></h3>
    <div class="card mb-5 shadow-sm" style="max-width: 28rem;">
        <img src="<%= listing.image.url ? listing.image.url : listing.image %>" class="card-img-top" alt="listing-img">
        <div class="card-body">
            <p class="card-text"><%= listing.description %></p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Price:</strong> &#8377; <%= listing.price.toLocaleString("en-IN") %></li>
            <li class="list-group-item"><strong>Location:</strong> <%= listing.location %></li>
            <li class="list-group-item"><strong>Country:</strong> <%= listing.country %></li>
        </ul>
        <div class="card-body d-flex justify-content-between">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>

    <!-- Review Form -->
    <div class="card mb-5 shadow-sm p-4">
        <h4 class="mb-3">Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" id="rating" name="review[rating]" min="1" max="5" value="2" step="0.5" class="form-range">
            </div>
            <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="Comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some comments for review.</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>

    <!-- Reviews Section -->
    <div class="card shadow-sm p-4">
        <h3 class="mb-4">All Reviews</h3>
        <ul class="list-unstyled">
            <% if (listing.reviews && listing.reviews.length > 0) { %>
                <% listing.reviews.forEach(review => { %>
                    <li class="mb-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Anonymous User</h5>
                                <p class="card-text"><%= review.comment %></p>
                                <p class="card-text text-warning">‚≠ê <%= review.rating %> / 5</p>

                                <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST" class="mb-2">
                                <button class="btn btn-outline-warning">Delete</button>
                                </form>
                            </div>
                        </div>
                    </li>
                    
                <% }) %>
            <% } else { %>
                <li class="text-muted">No reviews yet. Be the first to leave one!</li>
            <% } %>
        </ul>
    </div>

</div>
